import random

def genera_sequenza_segreta(dimensione, minimo, massimo):
    return random.sample(range(minimo, massimo + 1), dimensione)


def leggi_sequenza_utente(dimensione):
    while True:
        try:
            sequenza = list(map(int, input(f"Inserisci la tua sequenza di {dimensione} numeri (tra 1 e 6), separati da spazio: ").split()))
            if len(sequenza) == dimensione and all(1 <= num <= 6 for num in sequenza):
                return sequenza
            print(f"La sequenza deve contenere {dimensione} numeri tra 1 e 6.")
        except ValueError:
            print("Inserisci solo numeri validi.")


def calcola_feedback(segreta, tentativo):
    giusti_posizione = sum(1 for i in range(len(segreta)) if segreta[i] == tentativo[i])
    giusti_sbagliata_posizione = sum(1 for num in tentativo if num in segreta) - giusti_posizione
    return giusti_posizione, giusti_sbagliata_posizione


def scegli_difficolta():
    difficolta = input("Scegli la difficoltÃ  (Facile, Intermedio, Difficile): ").lower()
    if difficolta == "facile": return 15
    if difficolta == "intermedio": return 10
    if difficolta == "difficile": return 7
    print("Scelta non riuscita. Scegli tra 'Facile', 'Intermedio' o 'Difficile'.")
    return scegli_difficolta()


def gioca_partita(max_tentativi):
    dimensione = 4
    segreta = genera_sequenza_segreta(dimensione, 1, 6)
    print("Comincia il gioco! Devi indovinare la sequenza segreta di 4 numeri tra 1 e 6.")
    
    for tentativi in range(max_tentativi):
        tentativo = leggi_sequenza_utente(dimensione)
        giusti_posizione, giusti_sbagliata_posizione = calcola_feedback(segreta, tentativo)
        
        print(f"Giusti al posto giusto: {giusti_posizione}, giusti al posto sbagliato: {giusti_sbagliata_posizione}")
        
        if giusti_posizione == dimensione:
            print(f"Hai vinto La sequenza giusta era {segreta}.")
            return
        
        print(f"tentativi rimanentii: {max_tentativi - tentativi - 1}")
    
    print(f"Hai esaurito tutti i tentativi! La sequenza segreta era {segreta}.")


def main():
    print("Benvenuto in Mastermind!")
    max_tentativi = scegli_difficolta()
    gioca_partita(max_tentativi)
    print("Grazie per aver giocato!")


main()
